<div class="container">
  <h3 class="ml-4 my-4 d-inline-flex">新規会員登録</h3>

  <div class="ml-5">
  <%= form_with model: @customer, url: customer_registration_path, id:'new_user', class: 'new_user', local: true do |f|%>
    <div class="row">
      <label class="col-lg-3">名前</label>
      <div class="col-lg-3">
        <span class="mr-3">(姓)</span>
        <%= f.text_field :last_name, autoforcus: true, autocomplete: "last_name",  placeholder: "長野" %>
      </div>
      <div class="col-lg-3">
        <span class="mr-3">(名)</span>
        <%= f.text_field :first_name, autoforcus: true, autocomplete: "first_name",  placeholder: "太郎" %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">フリガナ</label>
      <div class="col-lg-3">
        <span>(セイ)</span>
        <%= f.text_field :last_name_kana, autoforcus: true, autocomplete: "last_name_kana",  placeholder: "ナガノ" %>
      </div>

      <div class="col-lg-3">
        <span>(メイ)</span>
        <%= f.text_field :first_name_kana, autoforcus: true, autocomplete: "first_name_kana",  placeholder: "タロウ" %>
      </div>
    </div><br>

     <div class="row">
      <label class="col-lg-3">メールアドレス</label>
      <div class="col-lg-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: 'ml-5' %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">郵便番号（ハイフンなし）</label>
      <div class="col-lg-3">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",  placeholder: "3808570", class: 'ml-5' %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">住所</label>
      <div class="col-lg-6">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"60",  placeholder: "長野県長野市大字南長野字幅下692-2", class: 'ml-5' %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">電話番号（ハイフンなし）</label>
      <div class="col-lg-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",  placeholder: "0901234568", class: 'ml-5' %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">パスワード
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %></label>
      <div class="col-lg-3">
        <%= f.password_field :password, autocomplete: "encrypted_password", class: 'ml-5' %>
      </div>
    </div><br>

    <div class="row">
      <label class="col-lg-3">パスワード（確認用）</label>
      <div class="col-lg-3">
        <%= f.password_field :password_confirmation, autocomplete: "encrypted_password", class: 'ml-5' %>
      </div>
    </div><br>

    <div class="row actions ml-5">
      <div class="col-md-8 offset-md-3">
      <%= f.submit "新規登録", class: "btn btn-success col-lg-2" %>
      </div>
    </div>
  <% end %>
  </div>

  <h5 class="ml-4 mt-5 d-inline-flex">既に登録済みの方</h5>
    <div class="col-lg-12 mt-3 ml-5">
      <%- if controller_name != 'sessions' %>
        <%= link_to "こちら", new_session_path(resource_name) %>
      <% end %>
      からログインしてください
    </div>
</div>