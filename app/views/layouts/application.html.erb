<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h2>LOGO</h2>
      <nav class="navbar navbar-expand-lg">
      <div class="container">
        <div class="navbar-brand logo">
          <%= link_to root_path do %>
          <%= image_tag 'logo-removebg-preview.png', size:100; %>
          <% end %>
        </div>
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <!--カスタマーがログインしている時 -->
            <li class="nav-item mr-5 pt-2">
              ようこそ！<span class="text-success mr-1"><%= current_customer.last_name %><%= current_customer.first_name %></span>さん！！
            </li>
            <li class="nav-item"><%= link_to " マイページ", customer_path(current_customer), class: 'btn btn-light btn-ms nav-link fas fa-house-user' %></li>
            <li class="nav-item ml-1"><%= link_to " 商品一覧", items_path, class: 'btn btn-light btn-ms nav-link fas fa-cheese' %></li>
            <li class="nav-item ml-1"><%= link_to " カート", cart_items_path, class: 'btn btn-light btn-ms nav-link fas fa-cart-plus' %></li>
            <li class="nav-item ml-1"><%= link_to " ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-light btn-ms nav-link fas fa-sign-out-alt' %></li>
          <% elsif admin_signed_in? %>
          <!-- 管理者がログインしている時 -->
            <li class="nav-item mr-5 pt-2">管理者としてログイン中</li>
            <li class="nav-item"><%= link_to "商品一覧", admin_items_path, class: 'btn btn-light btn-ms nav-link fas fa-cheese' %></li>
            <li class="nav-item ml-1"><%= link_to "会員一覧", admin_customers_path, class: 'btn btn-light btn-ms nav-link fas fa-users' %></li>
            <li class="nav-item ml-1"><%= link_to "注文履歴一覧", admin_root_path , class: 'btn btn-light btn-ms nav-link fas fa-history' %></li>
            <li class="nav-item ml-1"><%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-light btn-ms nav-link fas fa-list-alt' %></li>
            <li class="nav-item ml-1"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-light btn-ms nav-link fas fa-sign-out-alt' %></li>
          <% else %>
          <!-- ログインしていない時 -->
            <li class="nav-item mr-5 pt-2">
              ようこそ、<span class="text-success mr-1">ゲスト</span>さん！
            </li>
            <li class="nav-item"><%= link_to " About", about_path, class: 'btn btn-light btn-ms nav-link fas fa-house-user' %></li>
            <li class="nav-item ml-1"><%= link_to " 商品一覧", items_path, class: 'btn btn-light btn-ms nav-link fas fa-cheese' %></li>
            <li class="nav-item ml-1"><%= link_to " 新規登録", new_customer_registration_path, class: 'btn btn-light btn-ms nav-link fas fa-user-plus' %></li>
            <li class="nav-item ml-1"><%= link_to " ログイン", new_customer_session_path, class: 'btn btn-light btn-ms nav-link fas fa-sign-in-alt' %></li>
          <% end %>
        </ul>
      </div>
      </nav>
      <!--検索窓-->
    </header>
    <main>
      <%= yield %>
    </main>
    <footer></footer>
  </body>


</html>
