<div class ="container my-4">
    <div class="row">
        <div class="col-md-4 text-center">
          <h3>商品追加</h3>
        </div>
    </div>


    <%=form_with model: [:admin, @item], local:true do |f| %>
    <div class="row">
      <div class="col-md-4 my-2 text-center">
         <label>商品画像</label>
      </div>
      <div class="col-md-8">
         <%= f.attachment_field :image %>
      </div>

      <div class="col-md-4 my-2 text-center" >
         <label>商品名</label>
      </div>
      <div class="col-md-8">
         <%= f.text_field :name, size: "30", class:"form-control"%>
      </div>

      <div class="col-md-4 my-auto text-center">
         <label>商品説明</label>
      </div>
      <div class="col-md-8">
         <%=f.text_area :introduction, size: "30x5", class:"form-control"%>
      </div>

      <div class="col-md-4 my-2 text-center">
         <label>ジャンル</label>
      </div>
      <div class="col-md-8 my-2">
         <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--", size: "30", class: "form-control" %>
      </div>

      <div class="col-md-4 my-2 text-center">
         <label>税抜き価格</label>
      </div>
      <div class="col-md-8">
         <p><%=f.text_field :price, size: "30", class:"form-control"%></p>
      </div>

      <label class="col-md-4 text-center">販売ステータス</label>
    　    <%= f.radio_button :is_active, :true %>
    　    <%= f.label :is_active, "販売中", {value: :true } %>
    　    <%= f.radio_button :is_active, :false %>
    　    <%= f.label :is_active, "販売停止中", {value: :false } %>
    </div>
     <div class="row">
       <div class="col-md-6 offset-md-4 mt-3">
         <%= f.submit '新規登録', class:"btn w-25 btn-success" %>
       </div>
      </div>
    <% end %>
</div>