<div class="container my-4">
<%= notice %>
  <div class="row">
    <div class="col-md-6 offset-md-2">
      <h3 class="mt-2">商品詳細</h3>
    </div>
  </div>

  <div class="row mt-5 offset-md-2">
    <div class="col-md-3 text-center">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "250x200" %>
    </div>
    <div class="col-md-8 ml-5">
      <table class="table-light table table-hover">
        <thead class="thead-light">
          <tr>
            <th><p>商品名</p></th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th><p>商品説明</p></th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th><p>ジャンル</p></th>
            <td><%= Genre.find(@item.genre_id).name %></td>
          </tr>
          <tr>
            <th><p>価格(税込)</th>
            <td><p><%= @item.price.to_s(:delimited) %>(<%= (@item.price*1.1).round.to_s(:delimited) %>)円</p></td>
          </tr>
          <tr>
            <th><p>販売ステータス</p></th>
            <% if @item.is_active == true %>
              <td class="active_color">販売中</td>
            <% else %>
              <td class="inactive_color">販売停止中</td>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-5">
      <%= link_to '編集', edit_admin_item_path(@item.id), class: 'btn w-25 btn-success' %>
    </div>
  </div>
</div>