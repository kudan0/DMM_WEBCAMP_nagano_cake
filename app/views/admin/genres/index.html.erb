<h4>ジャンル一覧・追加</h4>

<%= form_with model:[:admin,@genre], local:true do |f| %>
  <div class="form-group">
    <label for="genre">ジャンル名</label>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success" %>
  </div>
<% end %>

  <!--ジャンル-->
<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to 'edit', edit_admin_genre_path(genre) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
