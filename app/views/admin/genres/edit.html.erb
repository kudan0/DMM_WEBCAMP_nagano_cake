<h3>ジャンル編集</h3>

<%= form_with model:[:admin,@genre], local:true do |f| %>
  <div class="form-group">
    <label for="genre">ジャンル名</label>
    <%= f.text_field:name, autofocus: true, placeholder:"name" %>
  </div>

  <div class="form-group">
    <%= f.submit "変更を保存", class: "btn btn-secondary" %>
  </div>
<% end %>