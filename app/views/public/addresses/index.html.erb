<h3>配送先登録/一覧</h3>

<%= form_with model:@address, local:true d |f|%>
  <div>
    郵便番号
  </div>
  <div>
    住所
  </div>
  <div>
    宛名
  </div>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @address.postal_code %></td>
      <td><%= @address.address %></td>
      <td><%= @address.name %></td>
      <td>
        <%= link_to "編集する", edit %>
        <%= link_to "削除する", destroy %>
      </td>
    </tr>
  </tbody>
</table>