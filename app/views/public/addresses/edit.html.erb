<h3>配送先編集</h3>

<%= form_with model:@address, local:true do |f| %>
<div>
  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field:postal_code, autofocus: true, id:"postal_code", placeholder:"郵便番号", class: "form-control postal_code"%>
</div>

<div>
  <label>住所</label>
  <%= f.text_field:address, autofocus: true, id:"address", placeholder:"住所", class: "form-control address"%>
</div>

<div>
  <label>宛名</label>
  <%= f.text_field:name, autofocus: true, id:"name", placeholder:"宛名", class: "form-control name"%>
</div>

<div>
  <%= f.submit "変更内容を保存"　class: "btn-secondary" %>
</div>