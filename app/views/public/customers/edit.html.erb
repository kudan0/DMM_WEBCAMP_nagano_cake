<h3>会員情報編集</h3>

<%= form_with model:@customer, local:true do |f| %>
  <div class="field">
    <%= f.label "名前" %>
    姓<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    名<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    姓(カナ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    名(カナ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telep_number" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  <div class="actions">
    <!--退会するボタン-->
    <%= link_to "退会する", "/customer/confirm" %
  </div>
<% end %>