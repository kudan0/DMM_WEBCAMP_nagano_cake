<div class="container">
    <div class="row">
        <div class="col-md-9 mt-3">
          <div>
          <% if @genre %>
            <h4><%= @genre.name %></h4>&emsp;(全<%= @genre.items.count %>件)&emsp; &emsp;
              <div class="text-center mt-3">
                <% @genres.each do |genre| %>
                <p class="btn-animation-02"><span><%= link_to genre.name, items_path(id: genre), class: 'btn btn-sm' %></span></p>
                <% end %>
              </div>

            <% @genre.items.each do |item| %>
            <table class="d-inline-block ml-5 mr-3 mt-2">
              <tr class="image-link">
                <td>
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag(item, :image, format: 'jpeg', size: "200x150") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><%= item.name %></td>
              </tr>
              <tr>
                <td>¥<%= item.price.to_s(:delimited) %></td>
              </tr>
            </table>
            <% end %>
          <% else %>
            <h4>商品一覧</h4>&emsp;(全<%= @items_all.count %>件)&emsp; &emsp;
               <div class="genre-button text-center mt-3">
                 <% @genres.each do |genre| %>
                  <p class="btn-animation-02"><span><%= link_to genre.name, items_path(id: genre), class: 'btn btn-sm' %></span></p>
                 <% end %>
               </div>
            <% @items.each do |item| %>
            <table class="d-inline-block ml-5 mr-3 mt-2 ">
              <tr class="image-link">
                <td>
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag(item, :image, format: 'jpeg', size: "200x150") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><%= item.name %></td>
              </tr>
              <tr>
                <td>¥<%= item.price.to_s(:delimited) %></td>
              </tr>
            </table>
            <% end %>
          <% end %>
          </div>
        </div>
    </div>
    <div class="row">
      <div class="center-block mx-auto"><br><br>
        <%= paginate @items %>
      </div>
    </div>
</div>

