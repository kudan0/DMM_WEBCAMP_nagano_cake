<div class="container">
  <div class="row">
    <div class="col-md-3">
    <div>ジャンル検索</div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%=link_to genre.name, items_path(id: genre), class: 'btn btn-sm'  %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <div>
      <% if @genre %>
        <h4><%= @genre.name %></h4>&emsp;(全<%= @genre.items.count %>件)&emsp; &emsp; <br>
          <% @genre.items.each do |item| %>
          <table class="d-inline-block ">
            <tr class="image-link">
              <td>
                <%= link_to item_path(item) do %>
                  <%= attachment_image_tag(item, :image, format: 'jpeg', size: "150x100") %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td><%= item.name %></td>
            </tr>
            <tr>
              <td>¥<%= item.price.to_s(:delimited) %></td>
            </tr>
          </table>
        <% end %>
      <% else %>
        <h4>商品一覧</h4>&emsp;(全<%= @items_all.count %>件)&emsp; &emsp; <br>
        <% @items.each do |item| %>
        <table class="d-inline-block ">
          <tr class="image-link">
            <td>
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag(item, :image, format: 'jpeg', size: "150x100") %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= item.name %></td>
          </tr>
          <tr>
            <td>¥<%= item.price.to_s(:delimited) %></td>
          </tr>
        </table>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="center-block mx-auto"><br><br>
      <%= paginate @items %>
    </div>
  </div>
</div>

